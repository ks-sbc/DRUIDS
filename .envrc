# Automatically activate Python virtual environment
source .venv/bin/activate

# Set environment variables for MkDocs development
export MKDOCS_ENV=development
export PYTHONPATH="${PWD}:${PYTHONPATH}"

# Enable Material plugins in CI/development
export CI=false

# Analytics Configuration
# Get your Google Analytics 4 property ID from https://analytics.google.com
# export GOOGLE_ANALYTICS_KEY="G-XXXXXXXXXX"

# Giscus Comments Configuration
# Get these values from https://giscus.app after setting up your repository
# export GISCUS_REPO_ID="R_kgDOxxxxxxxxx"
# export GISCUS_CATEGORY_ID="DIC_kwDOxxxxxxxxx"

# Site Configuration
# export SITE_URL="https://yourdomain.com"
